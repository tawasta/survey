<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="survey_question_form_save_city">
        <field name="name">Form view for survey question save city</field>
        <field name="model">survey.question</field>
        <field
            name="inherit_id"
            ref="survey_contact_ids.survey_question_form_contact"
        />
        <field name="arch" type="xml">
            <label for="contact_number" position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': ['&amp;', '&amp;', '&amp;', ('save_as_contact_name', '=', False), ('save_as_contact_phone', '=', False), ('save_as_contact_email', '=', False), ('save_as_contact_city', '=', False)]}</attribute>
            </label>
            <field name="contact_number" position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': ['&amp;', '&amp;', '&amp;', ('save_as_contact_name', '=', False), ('save_as_contact_phone', '=', False), ('save_as_contact_email', '=', False), ('save_as_contact_city', '=', False)], 'required': ['|', '|', '|', ('save_as_contact_name', '=', True), ('save_as_contact_phone', '=', True), ('save_as_contact_email', '=', True), ('save_as_contact_city', '=', True)]}</attribute>
            </field>
            <label for="save_as_contact_phone" position="after">
                <br />
                <field name="save_as_partner_city" nolabel="1" />
                <label for="save_as_partner_city" />
                <br />
                <field name="save_as_contact_city" nolabel="1" />
                <label for="save_as_contact_city" />
            </label>
        </field>
    </record>
</odoo>
