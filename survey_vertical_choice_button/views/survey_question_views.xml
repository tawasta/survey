<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="survey_question_form_vertical_choice_buttons">
        <field name="name">survey.question.form.vertical.choice.buttons</field>
        <field name="model">survey.question</field>
        <field name="inherit_id" ref="survey.survey_question_form" />
        <field name="arch" type="xml">
            <field name="suggested_answer_ids" position="after">
                <field
                    name="vertical_choice_buttons"
                    attrs="{'invisible': [('question_type', 'not in', ['simple_choice', 'multiple_choice'])]}"
                />
            </field>
        </field>
    </record>
</odoo>
