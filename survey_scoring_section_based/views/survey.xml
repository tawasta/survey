<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="survey_survey_form" model="ir.ui.view">
        <field name="name">survey.survey.form.inherit</field>
        <field name="model">survey.survey</field>
        <field name="inherit_id" ref="survey.survey_form" />
        <field name="arch" type="xml">
            <field name="scoring_type" position="after">
                <field
                    name="scoring_based_on_pages"
                    attrs="{'invisible': [('scoring_type', '=', 'no_scoring')]}"
                />
            </field>

            <field name="question_and_page_ids" position="after">
                <span
                    class="text-muted oe_edit_only"
                    attrs="{'invisible': [('scoring_based_on_pages', '=', False)]}"
                >
                    To set the Section-specific Score Limits, click a Section line and then the "i" icon
                </span>
            </field>
        </field>
    </record>
</odoo>
