<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="survey_question_form_save_as_company">
        <field name="name">Form view for survey question save as company</field>
        <field name="model">survey.question</field>
        <field name="inherit_id" ref="survey.survey_question_form" />
        <field name="arch" type="xml">
            <label for="save_as_nickname" position="after">
                <br />
                <field name="save_as_company_name" nolabel="1" />
                <label for="save_as_company_name" />
                <br />
                <field name="save_as_company_street" nolabel="1" />
                <label for="save_as_company_street" />
                <br />
                <field name="save_as_company_zip" nolabel="1" />
                <label for="save_as_company_zip" />
                <br />
                <field name="save_as_company_city" nolabel="1" />
                <label for="save_as_company_city" />
                <br />
                <field name="save_as_company_website" nolabel="1" />
                <label for="save_as_company_website" />
            </label>
        </field>
    </record>
</odoo>
