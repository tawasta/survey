<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="survey_question_tree_input" model="ir.ui.view">
        <field name="name">Tree view for survey question input</field>
        <field name="model">survey.question</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <tree string="Survey Question" editable="bottom" multi_edit="1">
                <field name="sequence" widget="handle" />
                <field name="title" />
                <field name="survey_id" readonly="1" />
                <field name="question_type" optional="show" />
                <field name="save_as_nickname" optional="hide" />
                <field name="constr_mandatory" optional="hide" />
            </tree>
        </field>
    </record>

    <record id="survey_question_action" model="ir.actions.act_window">
        <field name="name">Survey questions</field>
        <field name="res_model">survey.question</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="survey_question_tree_input" />
        <field name="context">{}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_empty_folder">
            No survey questions found
          </p>
        </field>
    </record>

</odoo>
