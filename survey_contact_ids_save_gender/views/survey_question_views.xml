<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="survey_question_form_gender">
        <field name="name">survey.question.form.gender</field>
        <field name="model">survey.question</field>
        <field name="inherit_id" ref="survey.survey_question_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='suggested_answer_ids']//.." position="before">
                <div class="row">
                    <div class="col-6">
                <label
                            for="contact_number"
                            attrs="{'invisible': ['|', ('save_as_contact_gender', '=', False), ('question_type', '!=', 'simple_choice')]}"
                        />
                <field
                            name="contact_number"
                            nolabel="1"
                            attrs="{'invisible': ['|', ('save_as_contact_gender', '=', False), ('question_type', '!=', 'simple_choice')], 'required': [('save_as_contact_gender', '=', True)]}"
                        />
                <br
                            attrs="{'invisible': ['|', ('save_as_contact_gender', '=', False), ('question_type', '!=', 'simple_choice')]}"
                        />
                <field
                            name="save_as_contact_gender"
                            nolabel="1"
                            attrs="{'invisible': [('question_type', '!=', 'simple_choice')]}"
                        />
                <label
                            for="save_as_contact_gender"
                            attrs="{'invisible': [('question_type', '!=', 'simple_choice')]}"
                        />
                <br attrs="{'invisible': [('question_type', '!=', 'simple_choice')]}" />
                <field
                            name="save_as_partner_gender"
                            nolabel="1"
                            attrs="{'invisible': [('question_type', '!=', 'simple_choice')]}"
                        />
                <label
                            for="save_as_partner_gender"
                            attrs="{'invisible': [('question_type', '!=', 'simple_choice')]}"
                        />
                <br attrs="{'invisible': [('question_type', '!=', 'simple_choice')]}" />
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
