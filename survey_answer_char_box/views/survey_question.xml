<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="survey_question_form" model="ir.ui.view">
        <field name="name">Form view for survey question char box answer</field>
        <field name="model">survey.question</field>
        <field name="inherit_id" ref="survey.survey_question_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='answer_numerical_box']/../.." position="before">
                <div
                    class="col-6"
                    attrs="{'invisible': ['|', ('scoring_type', '=', 'no_scoring'), ('question_type', 'not in', ['char_box'])]}"
                >
                    <group>
                        <field name="answer_char_box" string="Correct Answer" />
                        <field name="answer_char_box_case_sensitive" />
                        <field name="answer_char_box_similarity" />
                        <field name="is_scored_question" />
                        <field name="answer_score" />
                    </group>
                </div>
            </xpath>
        </field>
    </record>

    <record id="survey_question_tree_input" model="ir.ui.view">
        <field name="name">Tree view for survey question char box answer</field>
        <field name="model">survey.question</field>
        <field name="inherit_id" ref="survey_question_list_view.survey_question_tree_input" />
        <field name="arch" type="xml">
            <field name="question_type" position="after">
                <field name="answer_char_box" string="Correct Answer" optional="hide" />
                <field name="answer_char_box_case_sensitive" optional="hide" />
                <field name="answer_char_box_similarity" optional="hide" />
                <field name="is_scored_question" optional="hide" />
                <field name="answer_score" optional="hide" />
            </field>
        </field>
    </record>
</odoo>
