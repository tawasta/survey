<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <!-- EMAIL TEMPLATES -->
        <record
            id="mail_template_data_participation_ended"
            model="mail.template"
        >
            <field name="name">Your qualification has expired</field>
            <field name="model_id" ref="survey.model_survey_user_input" />
            <field name="subject">Qualification has expired: ${object.display_name}</field>
            <field name="use_default_to" eval="True" />
            <field name="body_html" type="xml">
                <div>
                    Dear ${object.partner_id.name or ''}<br />
                    We are pleased to inform you that your qualification ${object.display_name} has been expired.
                    <br /><br />
                    Thank you,
                    % if user.signature
                        <br />
                        ${user.signature | safe}
                    % endif
                </div>
            </field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="auto_delete" eval="True" />
        </record>

        <record
            id="mail_template_data_participation_ending"
            model="mail.template"
        >
            <field name="name">Your qualification is about to expire</field>
            <field name="model_id" ref="survey.model_survey_user_input" />
            <field name="subject">Your qualification is about to expire: ${object.display_name}</field>
            <field name="use_default_to" eval="True" />
            <field name="body_html" type="xml">
                <div>
                    Dear ${object.partner_id.name or ''}<br />
                    We are pleased to inform you that your qualification ${object.display_name} is about to expire.
                    <br /><br />
                    Thank you,
                    % if user.signature
                        <br />
                        ${user.signature | safe}
                    % endif
                </div>
            </field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="auto_delete" eval="True" />
        </record>

        <!-- SURVEY USER INPUT STAGES -->
        <record id="survey_user_input_stage5" model="survey.user_input.stage">
            <field name="name">Ended</field>
            <field name="sequence">6</field>
            <field
                name="mail_template_id"
                ref="mail_template_data_participation_ended"
            />
            <field name="color">10</field>
            <field name="is_end" eval="True" />
        </record>
    </data>
</odoo>
