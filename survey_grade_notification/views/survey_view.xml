<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="survey_form_users" model="ir.ui.view">
        <field name="name">survey.survey.form.users</field>
        <field name="model">survey.survey</field>
        <field name="inherit_id" ref="survey.survey_form" />
        <field name="arch" type="xml">
            <notebook position="before">
                <group>
                    <group>
                        <field name="notification_recipients" widget="many2many_tags" />
                        <field name="enable_response_notifications" />
                    </group>
                </group>
            </notebook>
        </field>
    </record>

    <record id="survey_question_form_inherit" model="ir.ui.view">
            <field name="name">survey.question.form.inherit.min_value</field>
            <field name="model">survey.question</field>
            <field name="inherit_id" ref="survey.survey_question_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='answers']/div[@class='row']" position="inside">
                    <field name="min_acceptable_value"/>
                </xpath>
            </field>
        </record>
</odoo>
