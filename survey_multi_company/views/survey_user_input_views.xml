<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="survey_user_input_line_company_view_form" model="ir.ui.view">
        <field name="name">survey.user_input.line.company.view.form</field>
        <field name="model">survey.user_input.line</field>
        <field name="inherit_id" ref="survey.survey_user_input_line_view_form" />
        <field name="arch" type="xml">
            <field name="suggested_answer_id" position="after">
                <field name="company_id" />
            </field>
        </field>
    </record>

    <record id="survey_user_input_view_form_company" model="ir.ui.view">
        <field name="name">survey.user_input.view.form.company</field>
        <field name="model">survey.user_input</field>
        <field name="inherit_id" ref="survey.survey_user_input_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="company_id" />
            </xpath>
        </field>
    </record>
</odoo>
