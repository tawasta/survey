<?xml version="1.0" encoding="utf-8" ?>
<odoo>
 <record model="ir.ui.view" id="survey_question_form_privacy">
        <field name="name">Form view for survey question privacy</field>
        <field name="model">survey.question</field>
        <field name="inherit_id" ref="survey.survey_question_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('o_preview_questions')]" position="inside">
                <div attrs="{'invisible': [('question_type', '!=', 'privacy')]}">
                    <div class="row"><i
                            class="fa fa-check-square-o fa-lg"
                        /> answer</div>
                </div>
            </xpath>
            <xpath expr="//page[@name='answers']//div" position="inside">
                <div
                    class="col-6"
                    attrs="{'invisible': [('question_type', '!=', 'privacy')]}"
                >
                    <group>
                        <field
                            name="privacy_activity_id"
                            attrs="{'required': [('question_type', '=', 'privacy')]}"
                            options="{'no_create': True}"
                        />
                    </group>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
