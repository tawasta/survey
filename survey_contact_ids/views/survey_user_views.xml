<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="survey_user_input_view_form_contacts" model="ir.ui.view">
        <field name="name">survey.user_input.view.form.contacts</field>
        <field name="model">survey.user_input</field>
        <field name="inherit_id" ref="survey.survey_user_input_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="contact_ids" widget="many2many_tags" />
            </xpath>
        </field>
    </record>
    <record id="survey_user_input_view_tree_contacts" model="ir.ui.view">
        <field name="name">survey.user_input.view.tree.contacts</field>
        <field name="model">survey.user_input</field>
        <field name="inherit_id" ref="survey.survey_user_input_view_tree" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="contact_ids" widget="many2many_tags" optional="show" />
            </field>
        </field>
    </record>
</odoo>
