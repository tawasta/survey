<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="survey_fill_form_done" inherit_id="survey.survey_fill_form_done">
        <xpath
            expr="(//div[hasclass('o_survey_finished')]/div[hasclass('row')]/div[hasclass('col')])[1]"
            position="before"
        >
            <t t-if="survey.show_numeric_score_to_participant">
                <!-- no styling included in module, use IDs to customize SCSS as needed -->
                <div id="survey-answer-numeric-score-container" class="col col-12">
                    <p>Your score: <span
                            id="survey-answer-numeric-score-value"
                            t-esc="numeric_score"
                        /></p>
                </div>
            </t>
        </xpath>
    </template>
</odoo>
