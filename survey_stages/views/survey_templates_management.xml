<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="survey_button_edit" name="Survey: edit button">
        <div>
            <t
                t-if="answer and answer.is_editable and answer.survey_id.state not in ['closed', 'draft']"
            >
                <p><a
                        role="button"
                        class="btn btn-primary btn-lg"
                        t-att-href="'/survey/edit/%s/%s' % (survey.access_token, answer.access_token)"
                    >
                    Edit</a></p>
            </t>
        </div>
    </template>
</odoo>
