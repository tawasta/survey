<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- SURVEY USER INPUT STAGES -->
    <record id="survey_user_input_stage_view_search" model="ir.ui.view">
        <field name="name">survey.user.input.stage.view.search</field>
        <field name="model">survey.user_input.stage</field>
        <field name="arch" type="xml">
            <search string="Participation Stage">
               <field name="name" string="Participation Stages" />
            </search>
        </field>
    </record>

    <record id="survey_user_stage_view_form" model="ir.ui.view">
        <field name="name">survey.user.stage.view.form</field>
        <field name="model">survey.user_input.stage</field>
        <field name="arch" type="xml">
            <form string="Participation Stage">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="mail_template_id" />
                            <field name="sequence" groups="base.group_no_one" />
                        </group>
                        <group>
                            <field name="is_accepted" />
                            <field name="is_cancel" />
                            <field name="is_editable" />
                            <field name="is_sent" />
                            <field name="color" widget="color_picker" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="survey_user_input_stage_view_tree" model="ir.ui.view">
        <field name="name">survey.user.input.stage.view.tree</field>
        <field name="model">survey.user_input.stage</field>
        <field name="arch" type="xml">
            <tree string="Participation Stage">
                <field
                    name="sequence"
                    widget="handle"
                    groups="survey.group_survey_manager"
                />
                <field name="name" />
                <field name="is_accepted" optional="show" />
                <field name="is_cancel" optional="show" />
                <field name="is_editable" optional="show" />
                <field name="is_sent" optional="show" />
            </tree>
        </field>
    </record>

    <record id="survey_user_input_stage_view_kanban" model="ir.ui.view">
        <field name="name">survey.user.input.stage.view.kanban</field>
        <field name="model">survey.user_input.stage</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div>
                                <strong class="o_kanban_record_title"><field
                                        name="name"
                                    /></strong>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="survey_user_input_stage_action" model="ir.actions.act_window">
        <field name="name">Participation Stages</field>
        <field name="res_model">survey.user_input.stage</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="survey_user_input_stage_view_tree" />
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Add a new stage in the task pipeline
          </p><p>
            Define the steps that will be used in the survey answer from the
            creation of the answer, up to the closing of the participation.
            You will use these stages in order to track the progress in
            solving a participation.
          </p>
        </field>
    </record>
</odoo>
