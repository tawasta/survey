<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.account</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="40" />
            <field name="inherit_id" ref="base.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div
                        class="app_settings_block"
                        data-string="Survey"
                        string="Survey"
                        data-key="survey"
                        groups="survey.group_survey_manager"
                    >
                        <h2>Filters in the Survey's result view</h2>
                        <div
                            class="row mt16 o_settings_container"
                            name="survey_filter_setting_container"
                        >
                            <div
                                class="col-12 col-lg-6 o_setting_box"
                                id="survey_filter_user_settings"
                            >
                                <div class="o_setting_left_pane">
                                    <field name="use_user_filter" />
                                </div>
                                <div
                                    class="o_setting_right_pane"
                                    name="use_user_filter_pane"
                                >
                                    <label
                                        for="use_user_filter"
                                        string="Use the user filter in the survey result view"
                                    />
                                    <div class="text-muted">
                                        Use the user filter in the survey result view
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div
                            class="row mt16 o_settings_container"
                            name="use_date_filter_setting_container"
                        >
                            <div
                                class="col-12 col-lg-6 o_setting_box"
                                id="use_date_filter_settings"
                            >
                                <div class="o_setting_left_pane">
                                    <field name="use_date_filter" />
                                </div>
                                <div
                                    class="o_setting_right_pane"
                                    name="use_date_filter_pane"
                                >
                                    <label
                                        for="use_date_filter"
                                        string="Use the date filter in the survey result view"
                                    />
                                    <div class="text-muted">
                                        Use the date filter in the survey result view
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div
                            class="row mt16 o_settings_container"
                            name="use_text_filter_setting_container"
                        >
                            <div
                                class="col-12 col-lg-6 o_setting_box"
                                id="use_event_contain_filter_settings"
                            >
                                <div class="o_setting_left_pane">
                                    <field name="use_event_contain_filter" />
                                </div>
                                <div
                                    class="o_setting_right_pane"
                                    name="use_event_contain_filter_pane"
                                >
                                    <label
                                        for="use_event_contain_filter"
                                        string="Use the text filter in the survey result view"
                                    />
                                    <div class="text-muted">
                                        Use the text filter in the survey result view
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div
                            class="row mt16 o_settings_container"
                            name="module_society_event_core_setting_container"
                        >
                            <div
                                class="col-12 col-lg-6 o_setting_box"
                                id="module_society_event_core_settings"
                            >
                                <div class="o_setting_left_pane">
                                    <field name="module_society_event_core" />
                                </div>
                                <div
                                    class="o_setting_right_pane"
                                    name="module_society_event_core_pane"
                                >
                                    <label
                                        for="module_society_event_core"
                                        string="Use the event in the survey"
                                    />
                                    <div class="text-muted">
                                        Use the event in the survey
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div
                            class="col-12 col-lg-6 o_setting_box"
                            attrs="{'invisible': [('module_society_event_core', '=', False)]}"
                        >
                            <div class="o_setting_left_pane" />
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt8">
                                        <label
                                            for="use_event_filter"
                                            class="col-lg-4 o_light_label"
                                            string="Use the event filter in the survey result view"
                                        />
                                        <field name="use_event_filter" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="action_survey_config" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'survey', 'bin_size': False}</field>
        </record>

    </data>
</odoo>
